<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:background="@drawable/my_button_bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout10"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView3_bookimage"
        android:layout_toStartOf="@+id/imageView3_bookimage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品金额0元"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"
            android:id="@+id/textView5_subtotal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买日期"
            android:ellipsize="start"
            android:textColor="@color/base_color_text_gray"
            android:id="@+id/textView6_buyDate"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout10"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageView3_bookimage"
        android:id="@+id/linearLayout11">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共有商品0件"
            android:textColor="@color/base_color_text_gray"
            android:layout_marginEnd="10dp"
            android:id="@+id/textView7_total"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/base_color_text_gray"
            android:layout_marginEnd="10dp"
            android:id="@+id/textView8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态"
            android:textColor="@color/base_color_text_gray"
            android:id="@+id/textView10_status"/>
    </LinearLayout>

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageView3_bookimage"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lines="3"
        android:ellipsize="marquee"
        android:text="书名"
        android:textColor="@color/base_color_text_gray"
        android:id="@+id/textView11_bookname"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout11"
        android:layout_alignEnd="@+id/linearLayout11"/>


</RelativeLayout>