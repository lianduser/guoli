<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/linearLayout5"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_userIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/de_default_portrait"/>

        <TextView
            android:id="@+id/textView11_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:text="***"
            android:singleLine="true" />

        <TextView
            android:id="@+id/textView12_createdAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="无"
            />

        <RatingBar
            android:id="@+id/ratingBar_star"
            style="@style/myRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView13_comment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.45"
        android:lines="2"
        android:maxLines="6"
        android:padding="10dp"
        android:text="亲,本书还没有评价"/>

</LinearLayout>