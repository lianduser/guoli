<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/base_bg"
    tools:context=".ui.EvaluationActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@color/color_theme"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/textView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/def_button_bg"
            android:text="返回"
            android:onClick="backClick"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center|top"
            android:text="发表评价"
            android:textColor="@color/white"
            android:textSize="22sp"
            />

        <ImageView
            android:id="@+id/imageView_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView2"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/button_cart_bg"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/base_color_text_white">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:id="@+id/imageView3_bookimage"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="书名"
            android:textColor="@color/base_color_text_gray"
            android:textSize="14sp"
            android:lines="3"
            android:id="@+id/textView7_bookName"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imageView3_bookimage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textColor="@color/base_color_text_gray"
            android:textSize="14sp"
            android:id="@+id/textView10_discount_price"
            android:layout_alignBottom="@+id/imageView3_bookimage"
            android:layout_toEndOf="@+id/imageView3_bookimage"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@mipmap/login_line"
        android:id="@+id/view_line3"/>

    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/base_color_text_white"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RatingBar
            android:id="@+id/ratingBar_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/myRatingBar2"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/base_color_text_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_evaluation"
            android:lines="5"
            android:padding="10dp"
            android:gravity="top"
            android:hint="喜欢此商品吗?说说您的使用感受吧"
            android:textColor="@color/base_color_text_black"
            android:textColorHint="@color/base_color_text_gray"
            android:textSize="14sp"
            android:background="@mipmap/login_bg"
            android:textCursorDrawable="@null"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@mipmap/login_line"
        android:id="@+id/view_line4"
        >
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/base_color_text_white"
        android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="@color/base_color_text_white"
            android:background="@drawable/login_button_bg"
            android:id="@+id/button_submit"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
